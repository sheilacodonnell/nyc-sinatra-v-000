<h1>Figures</h1>
<table>
  <tr>
    <th>Figure</th>
    <th>Titles</th>
    <th>Landmarks</th>
  </tr>

  <% Figure.all.each do |figure| %>
  <tr>
    <td><%= figure.name %><td>
    <% figure.titles.each do |title| %>
    <td><%= title.name %></td>
    <% end %>
    <% figure.landmarks.each do |landmark| %>
    <td><%= landmark.name %></td>
    <% end %>
  </tr>

<% end %>
</table>
